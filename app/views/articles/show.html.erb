<p style="color: green"><%= notice %></p>

<%= render @article %>

<div>
  <% if @article.images.attached? %>
    <% @article.images.each do |image|%>
      <%= image_tag image, alt: 'images' %>
      <%= link_to "Supprimer l'image", article_image_path(@article), method: :delete, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> 
    <%end%>
  <%end%>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
